<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.aimewexample.comics.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorMarvel"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/image_marvel"
            android:layout_width="300dp"
            android:layout_height="100dp"
            android:layout_margin="60dp"
            android:src="@drawable/image_marvel_logo_2" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorMarvel"
            android:gravity="center_horizontal">

            <ImageButton
                android:id="@+id/button_character"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginRight="160dp"
                android:background="@drawable/background_circle_button"
                android:padding="7dp"
                android:cropToPadding="true"
                android:src="@drawable/icon_character" />

            <ImageButton
                android:id="@+id/button_comic"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginLeft="160dp"
                android:background="@drawable/background_circle_button"
                android:src="@drawable/icon_comic" />

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/button_character"
                android:layout_alignStart="@+id/button_character"
                android:layout_below="@+id/button_character"
                android:gravity="center"
                android:text="Personaje"
                android:textColor="@android:color/white"
                android:textSize="15sp" />

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/button_comic"
                android:layout_alignStart="@+id/button_comic"
                android:layout_below="@+id/button_comic"
                android:gravity="center"
                android:text="Comics"
                android:textColor="@android:color/white"
                android:textSize="15sp" />
        </RelativeLayout>

    </LinearLayout>

</layout>
